<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SessionActivity$PlaceholderFragment">

    <tk.tnoodle.tnt.widget.FontFitTextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_above="@+id/start_button"
        android:gravity="center"
        android:textSize="1000sp"
        android:textColor="@color/black"
        android:text="@string/timer_in_seconds" />

    <Button
        android:id="@id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="@string/start_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scramble text"
        android:id="@+id/scrambleText"
        android:layout_alignBottom="@+id/timer"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrambleImage"
        android:layout_above="@+id/scrambleText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
